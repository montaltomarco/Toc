<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="@android:color/transparent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout">

        <ImageView
            android:layout_width="127dp"
            android:layout_height="26dp"
            android:id="@+id/imageView2"
            android:layout_gravity="right|top"
            android:background="@drawable/grand_lyon"
            android:layout_row="1"
            android:layout_column="11" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="417dp"
            android:layout_row="2"
            android:layout_column="11"
            android:id="@+id/frameLayoutHome">

            <FrameLayout
                android:layout_width="251dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal|top"
                android:outlineProvider="bounds">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Inscription"
                    android:id="@+id/textInscription"
                    android:layout_gravity="right|center_vertical"
                    android:textStyle="bold"
                    android:textIsSelectable="true"
                    android:onClick="ButtonOnClick" />

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/ButtonSignIn"
                    android:background="@drawable/inscription"
                    android:nestedScrollingEnabled="false"
                    android:onClick="ButtonOnClick"
                    android:layout_toStartOf="@+id/textView2"
                    android:layout_alignEnd="@+id/textInscription"
                    android:layout_gravity="left|center_vertical"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:clickable="true" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="165dp"
                android:layout_gravity="center_horizontal|bottom"
                android:id="@+id/frameLayoutHome2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Contactez Nous : admin@shifty.fr"
                    android:id="@+id/textView2"
                    android:layout_gravity="center"
                    android:textStyle="bold|italic" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="H4112 - All right reserved"
                android:id="@+id/textView14"
                android:layout_gravity="right|bottom" />

            <FrameLayout
                android:layout_width="251dp"
                android:layout_height="154dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Connexion"
                    android:id="@+id/textConnexion"
                    android:layout_gravity="right|center_vertical"
                    android:textStyle="bold"
                    android:textIsSelectable="true"
                    android:onClick="ButtonOnClick" />

                <ImageButton
                    android:layout_width="117dp"
                    android:layout_height="117dp"
                    android:id="@+id/ButtonLog"
                    android:background="@drawable/icon_login"
                    android:nestedScrollingEnabled="false"
                    android:onClick="ButtonOnClick"
                    android:layout_below="@+id/ButtonSignIn"
                    android:layout_centerHorizontal="true"
                    android:baselineAlignBottom="false"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_gravity="left|center_vertical"
                    android:clickable="true" />
            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_gravity="left|bottom"
                android:background="@drawable/ic_launcher" />

        </FrameLayout>
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Shifty"
        android:id="@+id/textViewWelcome"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textViewWelcomeAl"
        android:textStyle="bold|italic" />

</RelativeLayout>
