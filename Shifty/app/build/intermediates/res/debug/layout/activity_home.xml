<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.insa_lyon.shifty.HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Green Points :"
        android:id="@+id/textView7"
        android:layout_marginEnd="92dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XX"
        android:id="@+id/textView8"
        android:layout_marginEnd="34dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Votre départ :"
        android:id="@+id/textView9"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/depart"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:hint="@string/hint_depart" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrivee"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="30dp"
        android:hint="@string/hint_arrivee" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Votre arrivée :"
        android:id="@+id/textView10"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/depart"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:src="@drawable/points"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toStartOf="@+id/textView7"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/SearchButton"
        android:background="@drawable/but_search"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView8"
        android:layout_marginBottom="37dp"
        android:onClick="ButtonOnClickSearch" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/SaveButton"
        android:background="@drawable/but"
        android:layout_alignTop="@+id/SearchButton"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sauvegarder itinéraire"
        android:id="@+id/textView11"
        android:layout_below="@+id/SaveButton"
        android:layout_alignStart="@+id/arrivee"
        android:layout_marginLeft="-10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Recherche"
        android:id="@+id/textView12"
        android:layout_marginRight="17dp"
        android:layout_below="@+id/SaveButton"
        android:layout_alignEnd="@+id/SearchButton" />

</RelativeLayout>
