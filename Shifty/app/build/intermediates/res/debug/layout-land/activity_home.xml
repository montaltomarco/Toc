<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.insa_lyon.shifty.HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Green Points :"
        android:id="@+id/textView7"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XX"
        android:id="@+id/textView8"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginStart="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Votre départ :"
        android:id="@+id/textView9"
        android:layout_marginTop="29dp"
        android:layout_marginStart="38dp"
        android:textStyle="bold"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/depart"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:hint="@string/hint_depart"
        android:layout_marginBottom="25dp" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoCompleteTextView2"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="30dp"
        android:hint="@string/hint_arrivee" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Votre arrivée :"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:layout_below="@+id/depart"
        android:layout_alignStart="@+id/depart" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:src="@drawable/points"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Recherche"
        android:id="@+id/textView13"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/SearchButton"
        android:layout_alignEnd="@+id/SearchButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sauvegarder itinéraire"
        android:id="@+id/textViewiti"
        android:layout_alignBottom="@+id/depart"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/SaveButton"
        android:background="@drawable/but"
        android:layout_below="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/SearchButton"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignStart="@+id/SaveButton"
        android:background="@drawable/but_search" />

</RelativeLayout>
