<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mlay"
    android:background="@drawable/fond">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="113dp"
            android:weightSum="1"
            android:layout_weight="0.26">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView5"
                android:layout_weight="0.96"
                android:src="@drawable/person" />

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Bonjour "
                    android:id="@+id/bonj_text"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_weight="0.34"
                    android:lines="2" />

                <TextView
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Temperature à Lyon : 18C"
                    android:id="@+id/textView3"
                    android:layout_gravity="left|center_vertical" />

            </FrameLayout>
        </TableRow>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:text="Trajet"
                android:id="@+id/button_trajet"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:background="#ffe2dee2"
                android:textSize="20dp"
                android:clickable="true"
                android:onClick="ButtonOnClickTrajet" />

            <Button
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:text="Profile"
                android:id="@+id/button_profile"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:background="#ffe2dee2" />

            <Button
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:text="Reglages"
                android:id="@+id/button_reglages"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:background="#ffe2dee2" />

            <Button
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:text="Déconnexion"
                android:id="@+id/button_decon"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:background="#ffe2dee2"
                android:onClick="ButtonOnClickTrajet" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></FrameLayout>

</LinearLayout>